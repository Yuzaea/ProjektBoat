@page
@model ProjektBoat.Pages.Blog.DeletePostModel
@{
    ViewData["Titel"] = "Delete Post";
}

<h1>Delete blog post</h1>
<p>
    <h2>Do you want to delete this post from the blog?</h2>
    <h3>ID @Model.BlogPost.PostId</h3>
    <h3>Name @Model.BlogPost
    <form method="post">
        <input asp-for="@Model.BlogPost.PostId" type="hidden" />
        <input type="submit" value="Delete" />
        <a asp-page="Index">Cancel</a>
    </form>
</p>
